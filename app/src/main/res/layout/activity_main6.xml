<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1E5"
    tools:context=".MainActivity6">
    <ImageView
        android:id="@+id/retour_page_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/retour_page_arr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/image"
        android:layout_width="144dp"
        android:layout_height="137dp"
        android:layout_centerInParent="true"
        android:src="@drawable/delivery_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="50dp" />

    <TextView
        android:id="@+id/shopping"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Shopping Cart"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="680dp"
        android:background="@drawable/recatngle_blanc"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rectangle_bord"
        android:elevation="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/rectangle"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/fond_beige_button"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_rectangle"
            >


        </ImageView>

        <ImageButton
            android:id="@+id/my_round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="255dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/round_button"
            android:src="@drawable/button_moins"
            android:scaleType="center"

            />
        <ImageButton
            android:id="@+id/my_round_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginStart="336dp"
            android:background="@drawable/round_button"
            android:src="@drawable/button_plus"
            android:scaleType="center"

            />
        <TextView
            android:id="@+id/textViewCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="33dp"
            android:text="1"
            android:fontFamily="@font/dm_sans_bold"
            android:elevation="15dp"
            android:textSize="24sp"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:elevation="15dp"
            android:src="@drawable/burger_1" />

        <TextView
            android:id="@+id/chickenBurgerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="18dp"
            android:elevation="22dp"
            android:fontFamily="@font/dm_sans_medium"
            android:text="Chicken Burger"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/rect_1"
            app:layout_constraintTop_toTopOf="@id/rect_1"
            tools:ignore="MissingConstraints,NotSibling" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="38dp"
            android:elevation="30dp"
            >

            <TextView
                android:id="@+id/textViewDollar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="$ 22"
                android:textColor="#FF9431"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textViewCents"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_regular"
                android:text=".00"
                android:textColor="#FF9431"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- D'autres éléments peuvent être ajoutés ici et positionnés par rapport à rect_1 ou aux bords du RelativeLayout -->

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="390dp"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/rectangle_bord"
        android:elevation="30dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/rectangle2"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/fond_beige_button2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:layout_marginStart="250dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/rounded_rectangle"
            >


        </ImageView>

        <ImageButton
            android:id="@+id/my_round_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="255dp"
            android:layout_marginTop="29dp"
            android:background="@drawable/round_button"
            android:src="@drawable/button_moins"
            android:scaleType="center"

            />
        <ImageButton
            android:id="@+id/my_round_button22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="29dp"
            android:layout_marginStart="336dp"
            android:background="@drawable/round_button"
            android:src="@drawable/button_plus"
            android:scaleType="center"

            />
        <TextView
            android:id="@+id/textViewCounter2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="310dp"
            android:layout_marginTop="33dp"
            android:text="1"
            android:fontFamily="@font/dm_sans_bold"
            android:elevation="15dp"
            android:textSize="24sp"
            android:gravity="center"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="8dp"
            android:elevation="15dp"
            android:src="@drawable/cheese_burger" />

        <TextView
            android:id="@+id/cheseBurgerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="18dp"
            android:elevation="22dp"
            android:fontFamily="@font/dm_sans_medium"
            android:text="Chese Burger"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@id/rect_1"
            app:layout_constraintTop_toTopOf="@id/rect_1"
            tools:ignore="MissingConstraints,NotSibling" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="105dp"
            android:layout_marginTop="38dp"
            android:elevation="30dp"
            >

            <TextView
                android:id="@+id/textViewDollar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_bold"
                android:text="$ 22"
                android:textColor="#FF9431"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textViewCents2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/dm_sans_regular"
                android:text=".00"
                android:textColor="#FF9431"
                android:textSize="18sp" />
        </LinearLayout>
        <!-- D'autres éléments peuvent être ajoutés ici et positionnés par rapport à rect_1 ou aux bords du RelativeLayout -->

    </RelativeLayout>

    <Button
        android:id="@+id/buttonGoToBeforePage3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@id/retour_page_arr"
        app:layout_constraintLeft_toLeftOf="@id/retour_page_arr"
        app:layout_constraintRight_toRightOf="@id/retour_page_arr"
        app:layout_constraintTop_toTopOf="@id/retour_page_arr" />




</androidx.constraintlayout.widget.ConstraintLayout>