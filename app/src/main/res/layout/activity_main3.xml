<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF1E5"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/retour_page_arr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/retour_page_arr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />
    <ImageView
        android:id="@+id/page_coeur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/page_coeur"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <View
        android:id="@+id/bouton_1"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginStart="150dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/point_blanc"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toStartOf="parent"

        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/bouton_2"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/point_blanc"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/bouton_1"
        android:layout_marginStart="10dp"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/bouton_3"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/point_blanc"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/bouton_2"
        android:layout_marginStart="10dp"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/bouton_4"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/point_blanc"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/bouton_3"
        android:layout_marginStart="10dp"
        tools:ignore="MissingConstraints" />
    <View
        android:id="@+id/bouton_5"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/point_blanc"
        android:elevation="20dp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintStart_toEndOf="@+id/bouton_4"
        android:layout_marginStart="10dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="32dp"
        android:src="@drawable/burger_1"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:background="@drawable/recatngle_blanc"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/chickenBurgerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="Chicken Burger"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF9431"
        android:layout_centerInParent="true"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        android:layout_marginTop="40dp"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintStart_toStartOf="@id/view"
        android:elevation="30dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="30dp"
        android:gravity="center"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/textViewDollar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 22"
            android:textSize="30sp"
            android:textColor="#FF9431"
            android:fontFamily="@font/dm_sans_bold"/>

        <TextView
            android:id="@+id/textViewCents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=".00"
            android:textSize="18sp"
            android:textColor="#FF9431"
            android:fontFamily="@font/dm_sans_regular"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/fond_beige_button"
        android:layout_width="130dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/view"
        app:layout_constraintEnd_toEndOf="@id/view"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:elevation="15dp"
        >



    </ImageView>



    <ImageButton
        android:id="@+id/my_round_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="4dp"
        android:background="@drawable/round_button"
        android:src="@drawable/button_moins"
        android:elevation="15dp"
        android:scaleType="center"
        app:layout_constraintStart_toStartOf="@id/fond_beige_button"
        app:layout_constraintTop_toTopOf="@id/fond_beige_button"
    />
    <ImageButton
    android:id="@+id/my_round_button2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="5dp"
    android:background="@drawable/round_button"
    android:src="@drawable/button_plus"
    android:elevation="15dp"
    android:scaleType="center"
    app:layout_constraintEnd_toEndOf="@id/fond_beige_button"
    app:layout_constraintTop_toTopOf="@id/fond_beige_button"
    android:importantForAccessibility="no" />
    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:fontFamily="@font/dm_sans_bold"
        android:elevation="15dp"
        android:textSize="24sp"
        android:src="@+id/fond_beige_button"
        app:layout_constraintTop_toTopOf="@id/fond_beige_button"
        app:layout_constraintEnd_toEndOf="@id/fond_beige_button"
        app:layout_constraintStart_toStartOf="@id/fond_beige_button"
        app:layout_constraintBottom_toBottomOf="@id/fond_beige_button"
        android:gravity="center"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/rect_1"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/rectangle_bord"
        android:elevation="15dp"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        android:layout_marginTop="180dp"
         />
    <TextView
        android:id="@+id/size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Size"
        android:textColor="#FF9431"
        android:textSize="18dp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_medium"
        android:layout_marginStart="8sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/rect_1"
        app:layout_constraintTop_toTopOf="@id/rect_1"
        />
    <TextView
        android:id="@+id/Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medium"
        android:textSize="21dp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_extra_bold"
        android:layout_marginStart="8sp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@id/rect_1"
        app:layout_constraintTop_toTopOf="@id/rect_1"
        />
    <ImageView
        android:id="@+id/rect_2"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rectangle_bord"
        android:elevation="15dp"
        app:layout_constraintStart_toEndOf="@id/rect_1"
        app:layout_constraintTop_toTopOf="@id/view"
        android:layout_marginTop="180dp"
        />
    <TextView
        android:id="@+id/Energy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Energy"
        android:textColor="#FF9431"
        android:textSize="18sp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_medium"
        android:layout_marginStart="8sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/rect_2"
        app:layout_constraintTop_toTopOf="@id/rect_2"
        />
    <TextView
        android:id="@+id/KCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="554KCal"
        android:textSize="21dp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_extra_bold"
        android:layout_marginStart="8sp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@id/rect_2"
        app:layout_constraintTop_toTopOf="@id/rect_2"
        />
    <ImageView
        android:id="@+id/rect_3"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginStart="25dp"
        android:background="@drawable/rectangle_bord"
        android:elevation="15dp"
        app:layout_constraintStart_toEndOf="@id/rect_2"
        app:layout_constraintTop_toTopOf="@id/view"
        android:layout_marginTop="180dp"
        />
    <TextView
        android:id="@+id/Delivery"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivery"
        android:textColor="#FF9431"
        android:textSize="18sp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_medium"
        android:layout_marginStart="8sp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="@id/rect_3"
        app:layout_constraintTop_toTopOf="@id/rect_3"
        />
    <TextView
        android:id="@+id/min"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="45 min"
        android:textSize="21dp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_extra_bold"
        android:layout_marginStart="12sp"
        android:layout_marginTop="35dp"
        app:layout_constraintStart_toStartOf="@id/rect_3"
        app:layout_constraintTop_toTopOf="@id/rect_3"
        />

    <TextView
        android:id="@+id/About"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="300dp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_bold"
        android:text="About"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/texte"
        android:layout_width="368dp"
        android:layout_height="100dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="20dp"
        android:elevation="22dp"
        android:fontFamily="@font/dm_sans_medium"
        android:text="@string/crispy_seasoned_chicken_breast_topped_with_mandatory_melted_cheese_and_piled_onto_soft_rolls_with_onion_avocado_lettuce_tomato_and_garlic_mayo_if_ordered"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />



    <FrameLayout
        android:layout_width="280dp"
        android:layout_height="70dp"
        android:layout_marginEnd="70dp"
        android:layout_marginTop="460dp"
        android:elevation="17dp"
        app:layout_constraintEnd_toEndOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view">


        <ImageView
            android:id="@+id/vector3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:elevation="18dp"

            android:src="@drawable/rounded_rectangle_orange"
            android:importantForAccessibility="no" />


        <TextView
            android:id="@+id/Add_to_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:elevation="22dp"
            android:fontFamily="@font/dm_sans_bold"
            android:text="Add to Cart"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            tools:ignore="MissingConstraints" />


    </FrameLayout>
    <Button
        android:id="@+id/buttonGoToNextPage"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="430dp"
        android:elevation="40dp"
        android:text="Cliquez ici"
        app:layout_constraintBottom_toBottomOf="@id/view"
        app:layout_constraintLeft_toLeftOf="@id/view"
        app:layout_constraintRight_toRightOf="@id/view"
        app:layout_constraintTop_toTopOf="@id/view" />
    <Button
        android:id="@+id/buttonGoToBeforePage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:elevation="20dp"
        app:layout_constraintBottom_toBottomOf="@id/retour_page_arr"
        app:layout_constraintLeft_toLeftOf="@id/retour_page_arr"
        app:layout_constraintRight_toRightOf="@id/retour_page_arr"
        app:layout_constraintTop_toTopOf="@id/retour_page_arr" />

</androidx.constraintlayout.widget.ConstraintLayout>